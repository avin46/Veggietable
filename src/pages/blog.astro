---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<h1 class="page-title">Blog</h1>

<div class="grid">
  {posts.map(post => (
    <a href={`/blog/${post.slug}/`} class="card">
      <img src={post.data.heroImage} alt={post.data.title} />
      <div class="card-body">
        <h2>{post.data.title}</h2>
        <p>{post.data.description}</p>
      </div>
    </a>
  ))}
</div>

<style>
.page-title {
  max-width: 1000px;
  margin: 3rem auto 2rem;
  padding: 0 1.25rem;
}

.grid {
  max-width: 1000px;
  margin: 0 auto 4rem;
  padding: 0 1.25rem;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 2rem;
}

.card {
  display: block;
  border-radius: 16px;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  text-decoration: none;
  color: inherit;
}

.card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.card-body {
  padding: 1.25rem;
}

.card h2 {
  font-size: 1.2rem;
  margin-bottom: 0.5rem;
}

.card p {
  color: #555;
  font-size: 0.95rem;
}
</style>
