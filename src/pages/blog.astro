---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Blog</title>
  </head>

  <body>
    <main class="container">
      <h1>Blog</h1>

      <div class="grid">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}/`} class="card">
            {post.data.heroImage && (
              <img
                src={post.data.heroImage}
                alt={post.data.title}
                loading="lazy"
              />
            )}

            <div class="card-content">
              <h2>{post.data.title}</h2>
              <p>{post.data.description}</p>
            </div>
          </a>
        ))}
      </div>
    </main>
  </body>
</html>

<style>
.container {
  max-width: 1100px;
  margin: 3rem auto;
  padding: 0 1rem;
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 2rem;
}

.card {
  text-decoration: none;
  color: inherit;
  border-radius: 14px;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.card:hover {
  transform: translateY(-4px);
}

.card img {
  width: 100%;
  height: 220px;
  object-fit: cover;
  display: block;
}

.card-content {
  padding: 1.25rem;
}

.card-content h2 {
  margin: 0 0 0.5rem;
  font-size: 1.4rem;
}

.card-content p {
  margin: 0;
  color: #555;
  line-height: 1.5;
}
</style>
