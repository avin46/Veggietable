---
import BaseLayout from "../../layouts/BaseLayout.astro";

const TITLE = "Veggietable Blog â€“ Vegetarian Recipes & Healthy Cooking";
const DESCRIPTION =
  "Daily vegetarian recipes, plant-based cooking tips, and food insights focused on health, simplicity, and sustainability.";

const posts = [
  {
    title: "Why Home Cooking Is Making a Comeback",
    description:
      "How simple home cooking is becoming popular again for health, cost, and peace of mind.",
    image: "/images/blog/vegetarian-eating.jpg",
    url: "/blog/why-home-cooking-is-making-a-comeback",
  },
  {
    title: "Why Vegetarian Eating Is Gaining Momentum in 2026",
    description:
      "A practical look at why more people are choosing vegetarian food for health and sustainability.",
    image: "/images/blog/vegetarian-eating.jpg",
    url: "/blog/why-vegetarian-eating-is-gaining-momentum-2026",
  },
];
---

<BaseLayout
  title={TITLE}
  description={DESCRIPTION}
  canonical="https://veggietable.in/blog/"
  image="https://veggietable.in/images/og-blog.jpg"
>
  <main class="blog-container">
    <h1>Veggietable Blog</h1>
    <p class="intro">
      Vegetarian recipes, healthy cooking ideas, and plant-based food insights.
    </p>

    <section class="blog-grid">
      {posts.map((post) => (
        <a href={post.url} class="blog-card">
          <img src={post.image} alt={post.title} loading="lazy" />
          <h2>{post.title}</h2>
          <p>{post.description}</p>
        </a>
      ))}
    </section>
  </main>

  <style>
    .blog-container {
      max-width: 1100px;
      margin: 0 auto;
      padding: 2rem;
    }

    .intro {
      color: #555;
      margin-bottom: 2rem;
    }

    .blog-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
    }

    .blog-card {
      display: block;
      border-radius: 12px;
      overflow: hidden;
      background: #fff;
      text-decoration: none;
      color: #000;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .blog-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 16px 40px rgba(0, 0, 0, 0.12);
    }

    .blog-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .blog-card h2 {
      font-size: 1.2rem;
      margin: 1rem;
    }

    .blog-card p {
      font-size: 0.95rem;
      color: #555;
      margin: 0 1rem 1.5rem;
    }
  </style>
</BaseLayout>
