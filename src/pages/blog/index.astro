---
import BaseLayout from "../../layouts/BaseLayout.astro";

const TITLE = "Veggietable Blog – Vegetarian Recipes & Healthy Cooking";
const DESCRIPTION =
  "Daily vegetarian recipes, plant-based cooking tips, and food insights focused on health, simplicity, and sustainability.";
---

<BaseLayout
  title={TITLE}
  description={DESCRIPTION}
  canonical="https://veggietable.in/blog/"
  image="https://veggietable.in/images/og-blog.jpg"
>
  <main style="padding: 2rem;">
    <h1>Veggietable Blog</h1>
    <p>
      Welcome to Veggietable — vegetarian recipes, healthy cooking ideas,
      and plant-based food insights.
    </p>
  </main>
</BaseLayout>
