---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<article class="post">
  {post.data.image && (
    <img
      src={post.data.image}
      alt={post.data.title}
      class="hero"
    />
  )}

  <h1>{post.data.title}</h1>
  <p class="date">
    {post.data.pubDate.toDateString()}
  </p>

  <div class="content">
    <post.Content />
  </div>
</article>

<style>
  .post {
    max-width: 760px;
    margin: 0 auto;
    padding: 3rem 1rem 5rem;
  }

  .hero {
    width: 100%;
    border-radius: 14px;
    margin-bottom: 2.5rem;
  }

  h1 {
    font-size: 2.4rem;
    margin-bottom: 0.5rem;
  }

  .date {
    color: #666;
    margin-bottom: 2rem;
  }

  .content :global(h2) {
    margin-top: 2.5rem;
  }

  .content :global(p) {
    line-height: 1.7;
    margin: 1rem 0;
  }
</style>
