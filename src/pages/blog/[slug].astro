---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{post.data.title}</title>
  </head>

  <body>
    <article class="post">
      {post.data.heroImage && (
        <img
          class="hero"
          src={post.data.heroImage}
          alt={post.data.title}
        />
      )}

      <h1>{post.data.title}</h1>
      <p class="date">
        {post.data.pubDate.toDateString()}
      </p>

      <div class="content">
        <post.Content />
      </div>
    </article>
  </body>
</html>

<style>
.post {
  max-width: 760px;
  margin: 3rem auto;
  padding: 0 1rem;
}

.hero {
  width: 100%;
  border-radius: 18px;
  margin-bottom: 2rem;
}

h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
}

.date {
  color: #777;
  margin-bottom: 2rem;
}

.content {
  font-size: 1.05rem;
  line-height: 1.7;
  color: #222;
}

.content h2 {
  margin-top: 2rem;
}
</style>
