---
const { title, description, image, pubDate } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} | Veggietable</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <main class="container">
      <article class="article">
        <header class="header">
          <h1>{title}</h1>
          {pubDate && <p class="date">{pubDate.toDateString()}</p>}
          {image && (
            <img
              src={image}
              alt={title}
              class="hero"
              loading="lazy"
            />
          )}
        </header>

        <section class="content">
          <slot />
        </section>
      </article>
    </main>
  </body>
</html>

<style>
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    margin: 0;
    background: #ffffff;
    color: #111;
  }

  .container {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1.25rem;
  }

  .header h1 {
    font-size: 2.2rem;
    line-height: 1.25;
    margin-bottom: 0.5rem;
  }

  .date {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 1.25rem;
  }

  .hero {
    width: 100%;
    border-radius: 12px;
    margin: 1.5rem 0 2rem;
  }

  .content {
    line-height: 1.7;
    font-size: 1.05rem;
  }

  .content h2 {
    margin-top: 2.5rem;
  }

  .content p {
    margin: 1.2rem 0;
  }
</style>
